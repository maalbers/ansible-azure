jumphost:
  jumphost1:
    name: jumphost1
    datadisksize: 64
    machinesize: Standard_D1_v2
    storagtype: Standard_LRS
    tags:
      region: "{{ region }}"
      zone: jumphost
      stage: jumphost
      type: jumphost

